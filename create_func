import random
import string       ##importing for random string

def random1():      ##random function to generate student record 
    stdno_lst=[]
    name_lst=[]
    course_lst=[]
    lst = []
    
    stdno_lst = random.randint(10000000,99999999)  ##random student numbers
    char = string.ascii_uppercase
    char1 = string.ascii_lowercase
    name_lst = "".join(random.choice(char1) for i in range (5)) ##random names
    course_lst = str("CO") + str(random.randint(10000,99999)) ##random course numbers
    
    lst.append(stdno_lst)  ##creating list of list in lst 
    lst.append(name_lst)
    lst.append(course_lst)
    return lst             ##returning the created list
    
mainList = []              ##storing the list
def store():
    for i in range(10):
        mainList.append(random1())
        print(mainList[i])

    
def divider(ls1,start,end):   ##creating partion for sorting from the pivot to start and end position
    pivot=ls1[start]          ##selecting the pivot
    i=start-1                 ##selecting the start and end elements
    j=end+1
    while True:
        i+=1
        while ls1[i]<pivot:
            i+=1
        j-=1
        while ls1[j]>pivot:
            j-=1
        if i>=j:
            return j           
        ls1[i],ls1[j]=ls1[j],ls1[i]  ##if element at i is less than pivot put it on left hand side of pivot
                                     ##if element at j is less than pivot put it on right hand side of pivot

def sort_2(mainList,start,end):
    if start < end:
        d = divider(mainList,start,end)  ##value of element where partion will occur
        sort_2(mainList,start,d)
        sort_2(mainList,d+1,end)
        
def sort_1(ls1):                     ##recursive function to sort elements in the left and right partions    
    sort_2(ls1,0,len(ls1)-1)
        
def retrive():
    sort_1(mainList)
    print(mainList.pop(0))
    
def add():                            ##user input
    studentno = []
    name = []
    course = []
    stdlst = []
    
    studentno = int(input("Enter Student no "))
    while len(str(studentno))!=8:
        print("Please enter correct student number ")
        studentno = int(input("Enter Student no "))
    stdlst.append(studentno)
    
    name = str(input("Enter Name "))
    stdlst.append(name)
    
    course = str("CO")+str(input("Enter Course "))
    while len(str(course))!=7:
        print("Please enter correct course ")
        course = str("CO")+str(input("Enter Course "))
    
    stdlst.append(course)
    mainList.append(stdlst)
   
    return mainList


def insert_sort():                       #sorting the new list
    lst2 = add()
    print(lst2)
    for i in range (1, len(lst2)):
        temp = lst2[i]
        for j in range (i-1,-1,-1):
            if lst2[j] > temp:
                lst2[j+1] = lst2[j]
            else:
                lst2[j+1] = temp
                break
    print(lst2)
